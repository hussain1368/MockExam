<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="radios" parent="@android:style/TextAppearance">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/circle_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="options" parent="@android:style/TextAppearance">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#6699CC</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="info" parent="@android:style/TextAppearance">
        <item name="android:background">#6666CC</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="results" parent="@android:style/TextAppearance">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/circle_red</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>